#! /bin/bash

BASENAME=`basename $0`

PREFIX=/usr
DEBUG=no

HAVE_GSTREAMER=no
HAVE_VLC=no

FORCE_VERSION=no
BUILD_GSTREAMER=yes
BUILD_GSTREAMER_TAGREADER=yes
EMBED_GSTREAMER=no
BUILD_TAGLIB=no
BUILD_VLC=no
BUILD_PHONON=no
SUPPORT_SKINS=yes
SUPPORT_PLUGINS=yes

HAS_GNU_GETOPT=no

echo_help()
{
	if [ $HAS_GNU_GETOPT == "yes" ]; then
		echo "Usage:  $BASENAME [options]"
		echo '    --no-gstreamer              do not build GStreamer plugins'
		echo '    --no-gstreamer-tagreader    do not build GStreamer TagReader plugin'
		echo '    --embed-gstreamer           embed GStreamer plugins statically'
		echo '    --vlc                       build VLC plugins'
		echo '    --phonon                    build Phonon plugins'
		echo '    --taglib                    build with TagLib'
		echo '    --no-skins                  disable skins support'
		echo '    --no-plugins                disable plugins support'
		echo '    --force-version VERSION     overrides version.pri'
		echo '    --prefix PREFIX             installation prefix'
		echo '    --debug                     build in debug mode'
	else
		echo "Usage:  $BASENAME [options]"
		echo '    -G                          do not build GStreamer plugins'
		echo '    -T                          do not build GStreamer TagReader plugin'
		echo '    -s                          embed GStreamer plugins statically'
		echo '    -l                          build VLC plugins'
		echo '    -n                          build Phonon plugins'
		echo '    -t                          build with TagLib'
		echo '    -S                          disable skins support'
		echo '    -U                          disable plugins support'
		echo '    -f VERSION                  overrides version.pri'
		echo '    -p PREFIX                   installation prefix'
		echo '    -d                          build in debug mode'
	fi
}

echo_try()
{
	echo
	if [ $HAS_GNU_GETOPT == "yes" ]; then
		echo "Try \`$BASENAME --help' for more information"
	else
		echo "Try \`$BASENAME -h' for more information"
	fi
}

getopt -T > /dev/null
if [ $? -eq 4 ]; then
	HAS_GNU_GETOPT=yes
fi

if [ $HAS_GNU_GETOPT == "yes" ]; then
	args=`getopt -n$BASENAME -o h --longoptions="force-version: no-gstreamer no-gstreamer-tagreader embed-gstreamer vlc phonon taglib no-skins no-plugins debug prefix: help" -- "$@"`
else
	args=`getopt GTslntSUf:p:dh "$@"`
fi

if test $? != 0; then
	echo_try; exit 1
fi

eval set -- $args
while [ $# -gt 0 ]; do
	if [[ $1 == "p" || $1 == "--prefix" ]]; then
		shift; PREFIX=`readlink -m "$1"`
	elif [[ $1 == "d" || $1 == "--debug" ]]; then
		DEBUG=yes
	elif [[ $1 == "f" || $1 == "--force-version" ]]; then
		shift; FORCE_VERSION=$1
	elif [[ $1 == "G" || $1 == "--no-gstreamer" ]]; then
		BUILD_GSTREAMER=no
	elif [[ $1 == "T" || $1 == "--no-gstreamer-tagreader" ]]; then
		BUILD_GSTREAMER_TAGREADER=no
	elif [[ $1 == "s" || $1 == "--embed-gstreamer" ]]; then
		EMBED_GSTREAMER=yes
	elif [[ $1 == "l" || $1 == "--vlc" ]]; then
		BUILD_VLC=yes
	elif [[ $1 == "n" || $1 == "--phonon" ]]; then
		BUILD_PHONON=yes
	elif [[ $1 == "t" || $1 == "--taglib" ]]; then
		BUILD_TAGLIB=yes
	elif [[ $1 == "S" || $1 == "--no-skins" ]]; then
		SUPPORT_SKINS=no
	elif [[ $1 == "U" || $1 == "--no-plugins" ]]; then
		SUPPORT_PLUGINS=no
	elif [[ $1 == "-h"  || $1 == "--help" ]]; then
		echo_help; exit 0
	elif [ $1 == "--" ]; then
		shift
		if [ $# -ne 0 ]; then
			echo "$BASENAME: invalid arguments"
			echo_try; exit 1
		fi
		break
	fi
	shift
done

if [[ ! -n $QMAKE && ! -f $QMAKE ]]; then
	QMAKE=`which qmake` 2> /dev/null
	if [ ! -f $QMAKE ]; then
		QMAKE=$QTDIR/bin/qmake
		if [ ! -f $QMAKE ]; then
			echo "$BASENAME: Unable to find qmake. Try \`QTDIR=/path/to/qt $0' or \`QMAKE=/path/to/qmake $0'."
			exit 1
		fi
	fi
fi

QMAKE_CACHE=`pwd`/.qmake.cache
[ -f $QMAKE_CACHE ] && rm -f $QMAKE_CACHE

which pkg-config > /dev/null
if [ $? -eq 0 ]; then
	if [[ $BUILD_GSTREAMER == "yes" || $EMBED_GSTREAMER == "yes" ]]; then
		pkg-config --exists gstreamer-0.10
		if [ $? -eq 0 ]; then
			echo "found gstreamer-0.10"
		else
			echo "Package 'gstreamer-0.10' was not found in the pkg-config search path."
			echo "Perhaps you should add the directory containing \`gstreamer-0.10.pc'"
			echo "to the PKG_CONFIG_PATH environment variable."
			exit 1
		fi
	fi
	if [ "$BUILD_VLC" == "yes" ]; then
		pkg-config --exists libvlc
		if [ $? -eq 0 ]; then
			echo "found libvlc"
		else
			echo "Package 'libvlc' was not found in the pkg-config search path."
			echo "Perhaps you should add the directory containing \`libvlc.pc'"
			echo "to the PKG_CONFIG_PATH environment variable."
			exit 1
		fi
	fi
fi

if [ $SUPPORT_PLUGINS == "no" ]; then
	if [ $BUILD_GSTREAMER == "no" ]; then
		echo "'--no-gstreamer' cannot be used along with '--no-plugins'"
		exit 1
	else
		BUILD_GSTREAMER=no
	fi
	if [ $EMBED_GSTREAMER == "yes" ]; then
		echo "'--embed-gstreamer' cannot be used along with '--no-plugins'"
		exit 1
	fi
	if [ $BUILD_PHONON == "yes" ]; then
		echo "'--phonon' cannot be used along with '--no-plugins'"
		exit 1
	fi
	if [ $BUILD_VLC == "yes" ]; then
		echo "'--vlc' cannot be used along with '--no-plugins'"
		exit 1
	fi
fi

[ $BUILD_GSTREAMER == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG gstreamer"
[ $BUILD_GSTREAMER_TAGREADER == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG gstreamer-tagreader"
[ $EMBED_GSTREAMER == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG embed-gstreamer"
[ $BUILD_VLC == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG vlc"
[ $BUILD_PHONON == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG phonon"
[ $BUILD_TAGLIB == "yes" ] && QMAKE_CONFIG="$QMAKE_CONFIG taglib"
[ $SUPPORT_SKINS == "no" ] && QMAKE_CONFIG="$QMAKE_CONFIG no-skins"
[ $SUPPORT_PLUGINS == "no" ] && QMAKE_CONFIG="$QMAKE_CONFIG no-plugins"
if [ $DEBUG == "yes" ]; then
	QMAKE_CONFIG="$QMAKE_CONFIG debug"
else
	QMAKE_CONFIG="$QMAKE_CONFIG release"
fi

if [ $FORCE_VERSION != "no" ]; then
	echo "Forced version: $FORCE_VERSION"
	echo "N_CONFIG_FORCE_VERSION = $FORCE_VERSION" > $QMAKE_CACHE
fi

echo "N_CONFIG_SUCCESS = yes" >> $QMAKE_CACHE

[ -z "$NULLOY_BUILD_TMP_DIR" ] && NULLOY_BUILD_TMP_DIR=`pwd`/.tmp
[ ! -d "$NULLOY_BUILD_TMP_DIR" ] && mkdir $NULLOY_BUILD_TMP_DIR
echo "TMP_DIR = $NULLOY_BUILD_TMP_DIR" >> $QMAKE_CACHE


if [[ `uname | grep -i darwin` ]]; then
    QMAKE_EXTRA_OPTIONS="-spec macx-g++"
else
	echo
	echo "Install prefix: $PREFIX"
fi

echo
echo "Running qmake..."

$QMAKE "CONFIG+=$QMAKE_CONFIG" PREFIX="$PREFIX" $QMAKE_EXTRA_OPTIONS
if [ $? -ne 0 ]; then
    echo "$BASENAME: qmake failed"
    exit 1
fi

echo "Nulloy has been configured. Now run \`make'."
echo

exit 0
